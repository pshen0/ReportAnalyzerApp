{
  "ReverseProxy": {
    "Routes": {
      "storage_route": {
        "ClusterId": "storage",
        "Match": { "Path": "/api/v1/files/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      },
      "analysis_route": {
        "ClusterId": "analysis",
        "Match": { "Path": "/api/v1/analysis/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "storage": {
        "Destinations": {
          "d1": { "Address": "http://storage:5000/" }
        },
        "HealthCheck": {
          "Active": { "Enabled": true, "Interval": "00:00:05", "Path": "/health" }
        }
      },
      "analysis": {
        "Destinations": {
          "d1": { "Address": "http://analysis:6000/" }
        },
        "HealthCheck": {
          "Active": { "Enabled": true, "Interval": "00:00:05", "Path": "/health" }
        }
      }
    }
  }
}